{
  "compilerOptions": {
    "module": "commonjs",
    "target": "es5",
    "sourceMap": true,
    "emitDecoratorMetadata": true,
    "experimentalDecorators": true,
    "moduleResolution": "node",
    "allowSyntheticDefaultImports": true,
    "strictNullChecks": false,
    "baseUrl": "./src",
    "typeRoots" : [
     "./src/types",
     "./node_modules/@types"],
    "paths": {
    },
    "lib": [
      "dom",
      "es6"
    ],
    "types": [
      "uglify-js",
      "webpack",
      "zone.js",
      "lodash",
      "node",
      "horizon"
    ]
  },
  "exclude": [
    "node_modules",
    "dist"
  ],
  "awesomeTypescriptLoaderOptions": {
    "forkChecker": true,
    "useWebpackText": true
  }
}