{
    "compilerOptions": {
        "target": "es5",
        "module": "es2015",
        "moduleResolution": "node",
        "emitDecoratorMetadata": true,
        "experimentalDecorators": true,
        "allowSyntheticDefaultImports": true,
        "sourceMap": true,
        "strictNullChecks": false,
        "typeRoots": [
            "./src/types",
            "./node_modules/@types"
        ],
        "lib": [
            "dom",
            "es6"
        ],
        "types": [
            "uglify-js",
            "webpack",
            "zone.js",
            "node",
            "horizon"
        ]
    },
  
    "include": [
            "./src/**/*.module.ts"
    ],
    "exclude": [
        "node_modules",
        "dist"
    ],
    "awesomeTypescriptLoaderOptions": {
        "forkChecker": true,
        "useWebpackText": true
    },
    "angularCompilerOptions": {
        "debug": false,
        "trace": false,
        "skipMetadataEmit" : true,
        "annotateForClosureCompiler": false
    },
    "compileOnSave": false,
    "buildOnSave": false
}